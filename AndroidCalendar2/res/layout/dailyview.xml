<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dailyview_today"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp" >
    </TextView>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:orientation="vertical">

            <!-- time text from 12am to 12pm -->

            <TextView
                android:id="@+id/twelve_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/vertical_spacing"
                android:text="@string/twelve_am" >
            </TextView>

            <TextView
                android:id="@+id/one_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/twelve_am"
                android:layout_marginBottom="@dimen/vertical_spacing"
                android:text="@string/one_am" >
            </TextView>

            <TextView
                android:id="@+id/two_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/one_am"
                android:layout_marginBottom="@dimen/vertical_spacing"
                android:text="@string/two_am" >
            </TextView>

            <TextView
                android:id="@+id/three_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/two_am"
                android:layout_marginBottom="@dimen/vertical_spacing"
                android:text="@string/three_am" >
            </TextView>

            <TextView
                android:id="@+id/four_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/three_am"
                android:layout_marginBottom="@dimen/vertical_spacing"
                android:text="@string/four_am" >
            </TextView>

            <!-- line in each xx:00 -->
            
            
            
            <!-- line in each xx:30 -->


        </RelativeLayout>
    </ScrollView>

</LinearLayout>