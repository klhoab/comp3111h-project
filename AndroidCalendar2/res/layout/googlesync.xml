<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/gs_gs"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/gs_username"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/gs_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/gs_password"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/gs_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" >

                <requestFocus />
            </EditText>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="150dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <RadioGroup
                        android:id="@+id/gs_rgpast"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/gs_fromthepast"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/gs_past7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day1" />

                        <RadioButton
                            android:id="@+id/gs_past30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/gs_day2" />

                        <RadioButton
                            android:id="@+id/gs_past60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day3" />

                        <RadioButton
                            android:id="@+id/gs_past90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day4" />

                        <RadioButton
                            android:id="@+id/gs_past180"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day5" />

                        <RadioButton
                            android:id="@+id/gs_past365"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day6" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="150dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <RadioGroup
                        android:id="@+id/gs_rgfuture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/gs_tothefuture"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/gs_future7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day1" />

                        <RadioButton
                            android:id="@+id/gs_future30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/gs_day2" />

                        <RadioButton
                            android:id="@+id/gs_future60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day3" />

                        <RadioButton
                            android:id="@+id/gs_future90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day4" />

                        <RadioButton
                            android:id="@+id/gs_future180"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day5" />

                        <RadioButton
                            android:id="@+id/gs_future365"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gs_day6" />
                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/gs_sync"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="@string/gs_sync" />

                <Button
                    android:id="@+id/gs_disconnect"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="@string/gs_disconnect" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>