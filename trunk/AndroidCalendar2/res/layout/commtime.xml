<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="Calculate common free time for period: " />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/comm_starting_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:textSize="14dp" />

        <Button
            android:id="@+id/comm_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Filter"
            android:textSize="14dp" />

        <Button
            android:id="@+id/comm_ending_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.42"
            android:textSize="14dp" />
    </LinearLayout>
    
        <Button
        android:id="@+id/comm_caltime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cal !" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

    <ScrollView
        android:id="@+id/scrollView0"
        android:layout_width="132dp"
        android:layout_height="359dp" >

	  	<LinearLayout
    	    android:id="@+id/comm_namelist"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:orientation="vertical" >
    	</LinearLayout>
	</ScrollView>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.42" >
	  	<LinearLayout
    	    android:id="@+id/comm_timelist"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:orientation="vertical" >
    	</LinearLayout>
	</ScrollView>
    </LinearLayout>

</LinearLayout>